<div class="col-xs-12">

  <h1>This is the Awesome Authie App</h1>

  <% if user_signed_in? %>
  <div class="well">
     <%=current_user.inspect %>
     <br/>
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  </div>

  <% else %>

  <%= link_to "Sign In", new_user_session_path, class: 'btn btn-md btn-default'%>

  <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-md btn-warning'%>

  <%end %>

</div>
